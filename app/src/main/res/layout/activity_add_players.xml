<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bg2"
    tools:context=".AddPlayers">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">


        <View
            android:id="@+id/view10"
            android:layout_width="360dp"
            android:layout_height="373dp"
            android:background="#ED080809"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/lavendor_border"
            android:orientation="vertical"
            android:padding="24dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ENTER\nPLAYERS NAME"
                android:textAlignment="center"
                android:fontFamily="serif"
                android:textColor="@color/lavendor"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/playerOne"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/lavendor_border"
                android:drawablePadding="0dp"

                android:hint="Enter player one name"
                android:drawableLeft="@drawable/ic_xicon"
                android:textColorHint="@color/white"
                android:textSize="15sp"
                android:maxLines="1"
                android:padding="8dp"
                android:fontFamily="serif"
                android:textColor="@color/lavendor"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/playerTwo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/lavendor_border"
                android:drawablePadding="0dp"

                android:hint="Enter player two name"
                android:textColorHint="@color/white"
                android:drawableLeft="@drawable/ic_oicon"
                android:maxLines="1"
                android:padding="8dp"
                android:textSize="15sp"
                android:textColor="@color/lavendor"
                android:fontFamily="serif"
                android:textStyle="bold" />

            <Button
                android:id="@+id/startGameButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:text="Start Game"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="serif"
                android:textStyle="bold"
                app:cornerRadius="20dp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>